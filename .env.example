# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Database Configuration
# ==========================================
# For Docker Compose, use service names
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=auth_system

# Full Database URL (constructed from above)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/auth_system?schema=public

# Direct connection URL (for migrations/scripts)
DIRECT_URL=postgresql://postgres:postgres@postgres:5432/auth_system?schema=public

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis

# Full Redis URL
REDIS_URL=redis://:redis@redis:6379

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ==========================================
# Email/SMTP Configuration
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ==========================================
# Rate Limiting Configuration
# ==========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==========================================
# API Key Configuration
# ==========================================
API_KEY_LENGTH=32
API_KEY_EXPIRY_DAYS=365

# ==========================================
# Seed Configuration
# ==========================================
# Set to 'true' to run database seed on startup
SEED_DATABASE=false